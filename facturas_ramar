import React, { useState, useEffect, useRef } from 'react';
import { 
  Download, 
  Settings, 
  FileText, 
  Plus, 
  Trash2, 
  Save, 
  User, 
  Send,
  Calendar,
  DollarSign,
  Briefcase
} from 'lucide-react';

// Librería para PDF (Cargada vía CDN en el ambiente)
const HTML2PDF_URL = "https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js";

const App = () => {
  const [view, setView] = useState('editor'); // 'editor', 'profile', 'preview'
  const [profile, setProfile] = useState({
    name: 'Andrés Ramírez (Padre)',
    company: 'Contratista Independiente',
    id: 'V-00000000',
    email: 'papa@correo.com',
    phone: '+58 412 0000000',
    bankInfo: 'Banco Mercantil - Cuenta Corriente - 0105...',
    logoUrl: 'https://via.placeholder.com/150x50?text=LOGO+EMPRESA',
    clientName: 'Empresa Cliente S.A.',
    clientAddress: 'Calle Principal, Ciudad',
    dailyRate: 50,
  });

  const [invoice, setInvoice] = useState({
    number: '001',
    date: new Date().toISOString().split('T')[0],
    daysWorked: 1,
    commissions: 0,
    description: 'Servicios de consultoría y soporte técnico',
  });

  const [isGenerating, setIsGenerating] = useState(false);
  const invoiceRef = useRef();

  // Cargar datos guardados al iniciar
  useEffect(() => {
    const savedProfile = localStorage.getItem('invoice_profile');
    if (savedProfile) setProfile(JSON.parse(savedProfile));
    
    const script = document.createElement("script");
    script.src = HTML2PDF_URL;
    script.async = true;
    document.body.appendChild(script);
  }, []);

  const saveProfile = () => {
    localStorage.setItem('invoice_profile', JSON.stringify(profile));
    setView('editor');
  };

  const handleDownloadPDF = () => {
    if (typeof html2pdf === 'undefined') {
      alert("La librería de PDF aún se está cargando. Inténtalo de nuevo en un segundo.");
      return;
    }

    setIsGenerating(true);
    const element = invoiceRef.current;
    const opt = {
      margin: 10,
      filename: `Factura_${profile.name.replace(/\s/g, '_')}_${invoice.date}.pdf`,
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 2, useCORS: true },
      jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
    };

    html2pdf().from(element).set(opt).save().then(() => {
      setIsGenerating(false);
    });
  };

  const totalDaysAmount = invoice.daysWorked * profile.dailyRate;
  const grandTotal = totalDaysAmount + parseFloat(invoice.commissions || 0);

  return (
    <div className="min-h-screen bg-slate-50 text-slate-900 font-sans pb-20">
      {/* HEADER MÓVIL */}
      <nav className="bg-white border-b border-slate-200 px-4 py-4 sticky top-0 z-10 flex justify-between items-center shadow-sm">
        <h1 className="font-bold text-xl flex items-center gap-2 text-indigo-600">
          <FileText size={24} /> FacturaYa
        </h1>
        <div className="flex gap-2">
          <button 
            onClick={() => setView(view === 'profile' ? 'editor' : 'profile')}
            className={`p-2 rounded-full transition-colors ${view === 'profile' ? 'bg-indigo-100 text-indigo-600' : 'text-slate-500'}`}
          >
            <Settings size={22} />
          </button>
        </div>
      </nav>

      <div className="max-w-md mx-auto p-4">
        {view === 'profile' ? (
          <div className="bg-white rounded-2xl p-6 shadow-sm border border-slate-200 animate-in fade-in slide-in-from-bottom-4 duration-300">
            <h2 className="text-xl font-bold mb-6 flex items-center gap-2">
              <User className="text-indigo-500" /> Configuración de Perfil
            </h2>
            <p className="text-xs text-slate-500 mb-6 italic">Configura esto una vez y se usará para todas las facturas.</p>
            
            <div className="space-y-4">
              <div>
                <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Nombre Completo</label>
                <input 
                  type="text" 
                  value={profile.name}
                  onChange={(e) => setProfile({...profile, name: e.target.value})}
                  className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none"
                />
              </div>
              <div>
                <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Empresa / Cargo</label>
                <input 
                  type="text" 
                  value={profile.company}
                  onChange={(e) => setProfile({...profile, company: e.target.value})}
                  className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none"
                />
              </div>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Identificación (Rif/CI)</label>
                  <input 
                    type="text" 
                    value={profile.id}
                    onChange={(e) => setProfile({...profile, id: e.target.value})}
                    className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none"
                  />
                </div>
                <div>
                  <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Tarifa Diaria ($)</label>
                  <input 
                    type="number" 
                    value={profile.dailyRate}
                    onChange={(e) => setProfile({...profile, dailyRate: e.target.value})}
                    className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none"
                  />
                </div>
              </div>
              <div>
                <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Datos Bancarios</label>
                <textarea 
                  value={profile.bankInfo}
                  onChange={(e) => setProfile({...profile, bankInfo: e.target.value})}
                  className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none h-24"
                  placeholder="Banco, tipo de cuenta, número..."
                />
              </div>
              <div>
                <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">URL del Logo (Opcional)</label>
                <input 
                  type="text" 
                  value={profile.logoUrl}
                  onChange={(e) => setProfile({...profile, logoUrl: e.target.value})}
                  className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none text-xs"
                  placeholder="https://..."
                />
              </div>
              <button 
                onClick={saveProfile}
                className="w-full bg-indigo-600 text-white font-bold py-4 rounded-xl shadow-lg shadow-indigo-200 flex items-center justify-center gap-2 active:scale-95 transition-transform"
              >
                <Save size={20} /> Guardar Configuración
              </button>
            </div>
          </div>
        ) : (
          <div className="space-y-6">
            {/* FORMULARIO DE FACTURA */}
            <div className="bg-white rounded-2xl p-6 shadow-sm border border-slate-200 animate-in fade-in slide-in-from-bottom-4 duration-300">
              <h2 className="text-xl font-bold mb-6 flex items-center gap-2">
                <Plus className="text-indigo-500" /> Nueva Factura
              </h2>
              
              <div className="space-y-5">
                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Número</label>
                    <input 
                      type="text" 
                      value={invoice.number}
                      onChange={(e) => setInvoice({...invoice, number: e.target.value})}
                      className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none font-mono"
                    />
                  </div>
                  <div>
                    <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1">Fecha</label>
                    <div className="relative">
                      <input 
                        type="date" 
                        value={invoice.date}
                        onChange={(e) => setInvoice({...invoice, date: e.target.value})}
                        className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none"
                      />
                    </div>
                  </div>
                </div>

                <div className="bg-indigo-50/50 p-4 rounded-xl border border-indigo-100">
                  <div className="flex items-center gap-3 mb-4 text-indigo-700">
                    <Calendar size={18} />
                    <span className="font-bold text-sm uppercase tracking-tight">Cálculo de Días</span>
                  </div>
                  <div className="grid grid-cols-2 gap-4">
                    <div>
                      <label className="text-[10px] font-black uppercase text-indigo-400 block mb-1">Días Trabajados</label>
                      <input 
                        type="number" 
                        value={invoice.daysWorked}
                        onChange={(e) => setInvoice({...invoice, daysWorked: e.target.value})}
                        className="w-full bg-white border border-indigo-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none text-lg font-bold"
                      />
                    </div>
                    <div>
                      <label className="text-[10px] font-black uppercase text-indigo-400 block mb-1">Subtotal Días</label>
                      <div className="px-4 py-3 text-lg font-bold text-slate-600">
                        ${totalDaysAmount}
                      </div>
                    </div>
                  </div>
                </div>

                <div>
                  <label className="text-xs font-bold uppercase tracking-wider text-slate-400 block mb-1 flex items-center gap-2">
                    <DollarSign size={14} /> Comisiones / Bonos
                  </label>
                  <input 
                    type="number" 
                    value={invoice.commissions}
                    onChange={(e) => setInvoice({...invoice, commissions: e.target.value})}
                    className="w-full bg-slate-50 border border-slate-200 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 outline-none text-lg"
                    placeholder="0.00"
                  />
                </div>

                <div className="pt-4 border-t border-slate-100">
                  <div className="flex justify-between items-center mb-6">
                    <span className="text-slate-500 font-medium">Total a Cobrar:</span>
                    <span className="text-3xl font-black text-indigo-600">${grandTotal}</span>
                  </div>

                  <button 
                    onClick={handleDownloadPDF}
                    disabled={isGenerating}
                    className="w-full bg-indigo-600 text-white font-bold py-4 rounded-xl shadow-lg shadow-indigo-200 flex items-center justify-center gap-2 active:scale-95 transition-transform disabled:opacity-50"
                  >
                    {isGenerating ? (
                      <span className="flex items-center gap-2">
                        <div className="animate-spin rounded-full h-4 w-4 border-2 border-white border-t-transparent" />
                        Generando PDF...
                      </span>
                    ) : (
                      <><Download size={20} /> Generar y Descargar PDF</>
                    )}
                  </button>
                </div>
              </div>
            </div>

            {/* VISTA PREVIA OCULTA (SOLO PARA EL PDF) */}
            <div className="hidden">
              <div ref={invoiceRef} className="p-10 bg-white text-slate-900 font-sans" style={{ width: '210mm', minHeight: '297mm' }}>
                <div className="flex justify-between items-start mb-12">
                  <div>
                    {profile.logoUrl && (
                      <img src={profile.logoUrl} alt="Logo" className="h-16 mb-4 object-contain" />
                    )}
                    <h1 className="text-4xl font-black text-slate-800 uppercase tracking-tighter">Factura</h1>
                    <p className="text-slate-500 font-mono">#{invoice.number}</p>
                  </div>
                  <div className="text-right">
                    <p className="font-bold text-lg">{profile.name}</p>
                    <p className="text-sm text-slate-500">{profile.company}</p>
                    <p className="text-sm text-slate-500">{profile.id}</p>
                    <p className="text-sm text-slate-500">{profile.phone}</p>
                    <p className="text-sm text-slate-500">{profile.email}</p>
                  </div>
                </div>

                <div className="grid grid-cols-2 gap-8 mb-12 py-8 border-y border-slate-100">
                  <div>
                    <p className="text-[10px] font-bold uppercase text-slate-400 mb-2">Cobrar a:</p>
                    <p className="font-bold text-lg">{profile.clientName}</p>
                    <p className="text-sm text-slate-500">{profile.clientAddress}</p>
                  </div>
                  <div className="text-right">
                    <p className="text-[10px] font-bold uppercase text-slate-400 mb-2">Fecha de Emisión:</p>
                    <p className="font-bold text-lg">{new Date(invoice.date).toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' })}</p>
                  </div>
                </div>

                <table className="w-full mb-12">
                  <thead>
                    <tr className="border-b-2 border-slate-800">
                      <th className="py-4 text-left font-bold uppercase text-xs tracking-widest">Descripción</th>
                      <th className="py-4 text-right font-bold uppercase text-xs tracking-widest">Días / Cantidad</th>
                      <th className="py-4 text-right font-bold uppercase text-xs tracking-widest">Tarifa</th>
                      <th className="py-4 text-right font-bold uppercase text-xs tracking-widest">Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr className="border-b border-slate-100">
                      <td className="py-6 text-slate-700">Servicios profesionales de consultoría</td>
                      <td className="py-6 text-right font-mono">{invoice.daysWorked}</td>
                      <td className="py-6 text-right font-mono">${profile.dailyRate}</td>
                      <td className="py-6 text-right font-bold font-mono">${totalDaysAmount}</td>
                    </tr>
                    {parseFloat(invoice.commissions) > 0 && (
                      <tr className="border-b border-slate-100">
                        <td className="py-6 text-slate-700">Comisiones y bonificaciones especiales</td>
                        <td className="py-6 text-right font-mono">1</td>
                        <td className="py-6 text-right font-mono">${invoice.commissions}</td>
                        <td className="py-6 text-right font-bold font-mono">${invoice.commissions}</td>
                      </tr>
                    )}
                  </tbody>
                </table>

                <div className="flex justify-end mb-20">
                  <div className="w-1/2 space-y-4">
                    <div className="flex justify-between text-slate-500">
                      <span>Subtotal:</span>
                      <span className="font-mono">${grandTotal}</span>
                    </div>
                    <div className="flex justify-between text-2xl font-black border-t-2 border-slate-800 pt-4">
                      <span>TOTAL:</span>
                      <span>${grandTotal} USD</span>
                    </div>
                  </div>
                </div>

                <div className="p-8 bg-slate-50 rounded-xl">
                  <p className="text-[10px] font-bold uppercase text-slate-400 mb-4 tracking-widest">Información de Pago</p>
                  <p className="text-sm text-slate-600 leading-relaxed whitespace-pre-line">{profile.bankInfo}</p>
                </div>

                <div className="mt-20 pt-8 border-t border-slate-100 text-center text-[10px] text-slate-400 uppercase tracking-widest">
                  Documento generado electrónicamente via FacturaYa — Andrés Ramírez
                </div>
              </div>
            </div>
          </div>
        )}
      </div>

      {/* FOOTER NAVEGACIÓN */}
      <div className="fixed bottom-0 left-0 right-0 bg-white border-t border-slate-200 px-8 py-3 flex justify-around no-print shadow-[0_-2px_10px_rgba(0,0,0,0.05)]">
        <button 
          onClick={() => setView('editor')}
          className={`flex flex-col items-center gap-1 ${view === 'editor' ? 'text-indigo-600' : 'text-slate-400'}`}
        >
          <Briefcase size={20} />
          <span className="text-[10px] font-bold uppercase">Factura</span>
        </button>
        <button 
          onClick={() => setView('profile')}
          className={`flex flex-col items-center gap-1 ${view === 'profile' ? 'text-indigo-600' : 'text-slate-400'}`}
        >
          <User size={20} />
          <span className="text-[10px] font-bold uppercase">Perfil</span>
        </button>
      </div>
    </div>
  );
};

export default App;
