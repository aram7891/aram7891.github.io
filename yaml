name: CI
on: [push]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Install dependencies
        run: npm install
      - name: Run Lint
        run: npm run lint
      
      # AQUÍ VA EL SNIPPET DE VERCEL
      - name: 'notify vercel'
        uses: 'vercel/repository-dispatch/actions/status@v1'
        with:
          name: Vercel - andresramirez: lint
          token: ${{ secrets.VERCEL_TOKEN }} # Necesitarás crear un token en Vercel
